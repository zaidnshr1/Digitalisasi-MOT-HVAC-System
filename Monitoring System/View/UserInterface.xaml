<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Monitoring_System.ViewModel"
             xmlns:model="clr-namespace:Monitoring_System.Model"
             x:Class="Monitoring_System.View.UserInterface"
             x:DataType="vm:ViewModelLamp"
             Title="UserInterface">
    
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding LampList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ModelLamp">
                    <StackLayout Padding="10">
                        <Label Text="{Binding LampName}" FontAttributes="Bold"/>
                        <Label Text="{Binding IsLampOn}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>